var ctx =document.getElementById("o").getContext("2d");
var c = o.height/2; q = c/2; 

function ch(t,x,y){

ctx.beginPath();
//ctx.rect(x,y,w,h);
ctx.stroke();
var r= 20;
ctx.beginPath(); ctx.fillStyle="rgba(0,0,0,0.15)"; //lightgrey
ctx.arc(x,y,r,0,2*Math.PI);
ctx.fill(); ctx.stroke();
var d= 30;
var x= x-d; y=y+d+4; ctx.font="16px tahoma";
ctx.strokeText(t,x,y);
ctx.fillText(t,x,y);
}
ch("character", c,c);
var d=12; d=c+d;
var ch1x =c+40; i=20;
ch("Irma Lyons",ch1x+i ,d);
ch("Andres Bradley", ch1x+i*4,d);





